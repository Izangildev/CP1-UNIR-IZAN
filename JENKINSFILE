pipeline {
    agent any

     stages {
        stage('Get Code') {
            steps {
                // Obtener c√≥digo del repo
                git 'https://github.com/Izangildev/CP1-UNIR-IZAN.git'
                echo WORKSPACE
            }
        }
        
        stage('Tests')
        {
            parallel
            {

                stage('Unit') {
                            steps {
                                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                                    bat '''
                                        set PYTHONPATH=.
                                        pytest --junitxml=result-unit.xml test\\unit
                                    '''
                                }
                            }
                }
                
                        
                stage('Rest') {
                    steps {
                        catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                            bat '''
                                set FLASK_APP=app\\api.py
                                start flask run
                                pytest --junitxml=result-rest.xml test\\rest
                            '''
                        }
                    }
                }        
            }
        }      
     }
}